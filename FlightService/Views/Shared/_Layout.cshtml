<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlightService</title>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <div class="navbar">
                    <ul class="nav">
                        <li class="nav-item">

                            <a class="" asp-area="" asp-controller="Home" asp-action="Index">Flight Service</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Flights" asp-action="Index"><img src="~/images/planelogo.png" />Flights</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Passengers" asp-action="Index"><img src="~/images/passenger.png" />Passengers</a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br /><br />

    <footer class="border-top footer text-muted">
        <div class="container">
            <br />

            &copy; 2021 - FlightService By Maurice Stephan - <a asp-area="" asp-controller="Home" class="details" asp-action="Privacy">Privacy</a>
            <br /><br />

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
