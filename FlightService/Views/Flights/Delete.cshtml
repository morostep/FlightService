@model FlightService.Web.Models.FlightViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="card-header">
    <h2>Delete</h2>
</div>
<br />
<div class="card">
    <h3>Are you sure you want to delete this?</h3>
</div>
<br />

<div>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.flightNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.flightNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Airline)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Airline)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.departureTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.departureTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.departureTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.departureTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.departureDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.departureDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.departureAirport)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.departureAirport)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.arrivalTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.arrivalTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.arrivalDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.arrivalDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.arrivalAirport)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.arrivalAirport)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.passengerLimit)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.passengerLimit)
            </dd>
        </dl>
    </div>
    <br />
    <div class="action-center">

        <form asp-action="DeleteConfirm">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="details" style="background-color:red;" />
            @Html.ActionLink("Back to Details", "Details", new { Id = Model.Id }, new { @class = "details" })

            <a asp-action="Index" class="details">Back to List</a>
        </form>
    </div>

</div>
